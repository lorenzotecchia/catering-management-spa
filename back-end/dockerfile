# Backend Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install
# If you're using npm ci in production:
# RUN npm ci --only=production

# Copy source code
COPY . .

# Environment variables should be set in docker-compose or at runtime
ENV NODE_ENV=production

EXPOSE 3000

CMD ["node", "index.js"]
